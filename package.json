{
  "private": true,
  "workspaces": [
    "packages/*",
    "cooking",
    "docs"
  ],
  "scripts": {
    "build": "node scripts/build.mjs",
    "clean": "pnpm clean:lib && pnpm clean -r --stream",
    "clean:lib": "rimraf dist",
    "dev": "pnpm -C cooking dev",
    "docs:build": "pnpm -C docs build",
    "docs:dev": "pnpm -C docs dev",
    "docs:serve": "pnpm -C docs serve",
    "generate:version": "node scripts/generate-version.cjs",
    "postinstall": "pnpm generate:version",
    "lint-staged": "lint-staged -c ./.husky/lintstagedrc.js",
    "prepare": "husky install"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@spider-nest-vue/components": "workspace:*",
    "@spider-nest-vue/directives": "workspace:*",
    "@spider-nest-vue/hooks": "workspace:*",
    "@spider-nest-vue/icons": "^0.0.2",
    "@spider-nest-vue/locale": "workspace:*",
    "@spider-nest-vue/palette": "workspace:*",
    "@spider-nest-vue/tokens": "workspace:*",
    "@spider-nest-vue/utils": "workspace:*"
  },
  "devDependencies": {
    "@pnpm/find-workspace-packages": "^3.1.20",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "^7.4.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@vitejs/plugin-vue": "^1.9.4",
    "@vue/compiler-sfc": "^3.2.20",
    "chalk": "^4.1.2",
    "esbuild": "^0.13.12",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "ora": "^6.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-esbuild": "^4.6.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-vue": "^6.0.0",
    "sort-package-json": "^1.52.0",
    "stylelint": "^13.13.1",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.21.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.13",
    "vue": "^3.2.20",
    "vue-eslint-parser": "^8.0.0"
  },
  "engines": {
    "node": ">= 16"
  }
}
